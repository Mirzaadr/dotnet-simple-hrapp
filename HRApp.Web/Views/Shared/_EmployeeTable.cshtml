@model List<EmployeeDTO>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>EmployeeID</th>
            <th>Name</th>
            <th>Birth Place</th>
            <th>Birth Date</th>
            <th>Basic Salary</th>
            <th>Gender</th>
            <th>Marital Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() <= 0)
        {
            <tr>
                <td colspan="8" class="text-center">
                    <span>No Employee Added Yet</span>
                </td>
            </tr>
        }
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.EmployeeID</td>
                <td>@emp.Name</td>
                <td>@emp.BirthPlace</td>
                <td>@emp.BirthDate.ToShortDateString()</td>
                <td>@String.Format(new CultureInfo("id-ID"), "{0:C}", emp.BasicSalary)</td>
                <td>@emp.Gender</td>
                <td>@emp.MaritalStatus</td>
                <td>
                    <a href="/Employee/Edit/@emp.Id" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a href="/Employee/Delete/@emp.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i>
                    </a>
                    <a href="/Employee/Details/@emp.Id" class="btn btn-info btn-sm">
                        <i class="bi bi-eye"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
